{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/_app.jsx", "src/components/Header.jsx", "pages/product/[slug].jsx", "src/store/index.js", "pages/product/[slug].jsx", "pages/index.jsx", "pages/shop.jsx", "pages/cart.jsx", "pages/checkout.jsx"],
  "exclude": ["node_modules"]
}
